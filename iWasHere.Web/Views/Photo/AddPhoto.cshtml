@{
    ViewData["Title"] = "AddImages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model iWasHere.Domain.DTOs.PhotoModel




@using Kendo.Mvc.UI

<div class="box">
    <h4>Information</h4>
    <p>
        
    </p>
</div>

<form method="post" action='@Url.Action("Submit", "Photo")' onclick ="getAttraction()">
    <div class="demo-section k-content">
        @(Html.Kendo().ComboBoxFor(a => a.AttractionId)
 //.Name("Atractii")
 .DataTextField("AttractionName")
 .DataValueField("AttractionId")
 .HtmlAttributes(new { style = "width:150px; font-size:small; display:none id='Atractii'" })
 .Filter("StartsWith")
 .DataSource(source =>
 {
 source.Read(read =>
 {
       read.Action("GetAttractionsForCombo", "Photo");

 })
 .ServerFiltering(true);
 }))

        @(Html.Kendo().Upload()
            .Name("files")
            .HtmlAttributes(new { aria_label = "files" })
        )
        <p style="padding-top: 1em; text-align: right">
            <button onclick ="getAttraction()" type="submit" class="k-button k-primary" action='@Url.Action("Submit", "Photo")'>Submit</button>
        </p>
    </div>
</form>

<script>
    function getAttraction() {

        var filter = {}
        filter["attractionId"] = $("#Atractii").data('kendoComboBox').value();
        return filter;
    }
</script>



