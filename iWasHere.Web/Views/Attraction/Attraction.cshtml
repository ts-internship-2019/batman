@foreach (var t in Model.Comment)
{
    <div class="media">
        <div class="media-body">
            <h5 class="mt-0">@t.CommentTitle</h5>
            @if (@t.UserId != null)
            {
                <div class="userName">
                    @t.Name
                </div>
            }

            @for (int i = 0; i < @t.Rating; i++)
            {
                <span class="fa fa-star checked"></span>
            }
            @for (int i = 0; i < 5 - @t.Rating; i++)
            {
                <span class="fa fa-star"></span>
            }
            <p>
                @t.CommentText
            </p>
        </div>
    </div>
}



